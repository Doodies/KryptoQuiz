<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_30_dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/common_20_dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_next_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginTop="@dimen/common_20_dp"
                android:background="@drawable/bg_button"
                android:padding="@dimen/common_20_dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_next_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ssp_bold"
                    android:text="Next Game"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ssp_bold"
                    android:text="Today at 10:00 PM"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_next_game" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_20_dp"
                android:layout_marginStart="@dimen/common_20_dp"
                android:layout_marginTop="@dimen/common_40_dp"
                android:background="@drawable/bg_button"
                android:paddingBottom="@dimen/common_20_dp"
                android:paddingEnd="@dimen/common_12_dp"
                android:paddingStart="@dimen/common_12_dp"
                android:paddingTop="@dimen/common_20_dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_next_game">


                <ImageView
                    android:id="@+id/options"
                    android:layout_width="@dimen/common_30_dp"
                    android:layout_height="@dimen/common_30_dp"
                    android:layout_marginTop="@dimen/common_5_dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp" />

                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:text="Himanshu Arora"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_20_dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_12_dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_full_name">

                    <TextView
                        android:id="@+id/tv_no_of_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_games"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/tv_qcoin_left" />


                    <TextView
                        android:id="@+id/tv_games"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_8_dp"
                        android:text="65"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_no_of_games"
                        app:layout_constraintRight_toRightOf="@id/tv_no_of_games"
                        app:layout_constraintTop_toBottomOf="@id/tv_no_of_games" />

                    <TextView
                        android:id="@+id/tv_qcoin_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QCoin Left"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/tv_left_qcoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_8_dp"
                        android:text="48.26"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_qcoin_left"
                        app:layout_constraintRight_toRightOf="@id/tv_qcoin_left"
                        app:layout_constraintTop_toBottomOf="@id/tv_qcoin_left" />


                    <TextView
                        android:id="@+id/tv_qcoin_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QCoin Won"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toRightOf="@+id/tv_qcoin_left"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/tv_won_qcoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_8_dp"
                        android:text="78.96"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_16_dp"
                        app:layout_constraintLeft_toLeftOf="@id/tv_qcoin_won"
                        app:layout_constraintRight_toRightOf="@id/tv_qcoin_won"
                        app:layout_constraintTop_toBottomOf="@id/tv_qcoin_won" />

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_15_dp"
                    android:text="Share"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_15_dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_details" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_10_dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_share">


                    <ImageView
                        android:id="@+id/iv_facebook"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/iv_twitter"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="@dimen/common_15_dp"
                        app:layout_constraintLeft_toRightOf="@id/iv_facebook"
                        app:srcCompat="@drawable/twitter" />

                    <ImageView

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="@dimen/common_15_dp"
                        app:layout_constraintLeft_toRightOf="@+id/iv_twitter"
                        app:srcCompat="@drawable/whatsapp" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="@dimen/common_60_dp"
                android:layout_height="@dimen/common_60_dp"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_next_game">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/common_60_dp"
                    android:layout_height="@dimen/common_60_dp"
                    android:background="@drawable/circle" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="@dimen/common_15_dp"
                        android:layout_height="@dimen/common_15_dp"
                        app:srcCompat="@drawable/icon_camera" />

                </RelativeLayout>

            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_60_dp"
                android:layout_marginEnd="@dimen/common_12_dp"
                android:layout_marginStart="@dimen/common_12_dp"
                android:layout_marginTop="@dimen/common_40_dp"
                android:background="@drawable/bg_button_yellow"
                app:layout_constraintTop_toBottomOf="@+id/cl_profile">

                <ImageView
                    android:layout_width="@dimen/common_30_dp"
                    android:layout_height="@dimen/common_30_dp"
                    android:layout_marginEnd="@dimen/common_5_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tv_leaderboard"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/leaderboard" />

                <TextView
                    android:id="@+id/tv_leaderboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ssp_semi_bold"
                    android:text="Leaderboard"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_18_dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>