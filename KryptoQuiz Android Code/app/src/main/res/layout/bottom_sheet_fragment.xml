<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/place_bid_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/common_20_dp"
    android:paddingLeft="@dimen/common_20_dp"
    android:paddingRight="@dimen/common_20_dp"
    android:paddingBottom="@dimen/common_30_dp"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_add_referral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/attachment" />

        <TextView
            android:id="@+id/tv_add_referral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_12_dp"
            android:text="Add referral code"
            android:textColor="@color/black"
            android:textSize="@dimen/common_18_dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_add_referral" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@color/grey_opacity"
            app:layout_constraintTop_toBottomOf="@+id/iv_add_referral" />

        <ImageView
            android:id="@+id/iv_how_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_12_dp"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:srcCompat="@drawable/play_box_outline" />

        <TextView
            android:id="@+id/tv_how_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_12_dp"
            android:layout_marginTop="@dimen/common_12_dp"
            android:text="How to play"
            android:textColor="@color/black"
            android:textSize="@dimen/common_18_dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_add_referral"
            app:layout_constraintTop_toBottomOf="@+id/view_1" />

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@color/grey_opacity"
            app:layout_constraintTop_toBottomOf="@+id/tv_how_play" />


        <ImageView
            android:id="@+id/iv_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_12_dp"
            app:layout_constraintTop_toBottomOf="@+id/view_2"
            app:srcCompat="@drawable/contacts" />

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_12_dp"
            android:layout_marginTop="@dimen/common_12_dp"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="@dimen/common_18_dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_add_referral"
            app:layout_constraintTop_toBottomOf="@+id/view_2" />

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@color/grey_opacity"
            app:layout_constraintTop_toBottomOf="@+id/iv_contact_us" />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_12_dp"
            app:layout_constraintTop_toBottomOf="@+id/view_3"
            app:srcCompat="@drawable/logout" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_12_dp"
            android:layout_marginTop="@dimen/common_12_dp"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="@dimen/common_18_dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_logout"
            app:layout_constraintTop_toBottomOf="@+id/view_3" />

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/common_10_dp"
            android:background="@color/grey_opacity"
            app:layout_constraintTop_toBottomOf="@+id/iv_logout" />



    </android.support.constraint.ConstraintLayout>

</FrameLayout>
